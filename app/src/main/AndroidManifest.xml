<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sd_dtu.hollerandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.INTERNET"></uses-permission>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".NoticesAndProfile"
            android:label="Notices"
            android:theme="@style/Newtheme" />
        <activity
            android:name=".Events"
            android:label="Events"
            android:parentActivityName=".NoticesAndProfile"
            android:theme="@style/Newtheme1" />
        <activity
            android:name=".ChatBox"
            android:label="Chats"
            android:parentActivityName=".NoticesAndProfile" />
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:theme="@style/Newtheme1" />
        <activity
            android:name=".Suggestions"
            android:label="Suggestions"
            android:theme="@style/Newtheme1" />
        <activity android:name=".Personalisation"
            android:parentActivityName=".Settings"
            android:theme="@style/Newtheme1"
            android:label="Personalisation"
            />
        <activity android:name=".FullDetails"
            android:label="Event Details"
            android:theme="@style/Newtheme1"
            android:parentActivityName=".Events"
            ></activity>
    </application>

</manifest>